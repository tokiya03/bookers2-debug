<% if book.favorited_by?(current_user) %>
    <%= link_to book_favorite_path(book), method: :delete, remote: true, class: "text-danger" do %>
      <i class="fa-solid fa-heart"></i>︎<%= book.favorites.count %>
    <% end %>
<% else %>
    <% if book.favorites.count == 0 %>
      <%= link_to book_favorite_path(book), method: :post, remote: true, class: "text-primary" do %>
        <i class="fa-solid fa-heart"></i>︎<%= book.favorites.count %>
      <% end %>
    <% else %>
      <%= link_to book_favorite_path(book), method: :post, remote: true, class: "text-danger" do %>
        <i class="fa-solid fa-heart"></i>︎<%= book.favorites.count %>
      <% end %>
    <% end %>
<% end %>
