<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <!-- 過去の投稿を表示 -->
      <%= render 'books/index',books: @books %>
      <!-- 過去7日分の投稿数をグラフ表示 -->
      <%= render 'books/count', books: @books %>
      <!-- 投稿比を表示 -->
      <%= render 'books/comparison', today_book: @today_book, yesterday_book: @yesterday_book, this_week_book: @this_week_book, last_week_book: @last_week_book %>
      <!-- 検索日の投稿数を表示 -->
      <%= render 'search_post_count', user: @user, search_book: @search_book %>
    </div>
  </div>
</div>
